<link rel="stylesheet" href="/css/sign_up.css">
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="sign-up-facebook-logo">
                        <img src="https://png.pngtree.com/png-clipart/20200721/original/pngtree-facebook-name-with-back-shadow-png-image_4861810.jpg"/> 
                     </div>
                     <div>
                        <h5 class="mt-4" style="color:gray;text-align: center;">Sign up to see photos and videos</h5>
                        <h5 class="mb-4" style="color:gray;text-align: center;">from your friends.</h5>
                     </div>
                    <form action="/api/v1/users/create" method="POST">
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="fullName" id="fullName" placeholder="Enter your full name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email" required>
                        </div>
                        <div class="mb-3">
                            <label for="dob" class="form-label">Date Of Birth</label>
                            <input type="date" class="form-control" name="dateOfBirth" id="dob" placeholder="Enter your date of birth">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirm-password" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirm-password" name="confirmPassword" placeholder="Confirm password" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body" id="sign-up-footer">
                    <span>Have an account?   <a href="/api/v1/users/sign-in">Log in</a></span>
                </div>
            </div>
        </div>
    </div>
    <div class="login-buttons">
        <!-- Facebook Login Button -->
        <a href="#" class="login-button login-button-facebook">
            <i class="fab fa-facebook-f"></i> Login with Facebook
        </a>

        <!-- Gmail Login Button -->
        <a href="#" class="login-button login-button-google">
            <i class="fab fa-google"></i> Login with Gmail
        </a>

        <!-- GitHub Login Button -->
        <a href="#" class="login-button login-button-github">
            <i class="fab fa-github"></i> Login with GitHub
        </a>
    </div>
</div>