                <div class="col-4">
                    <i class="fa-regular fa-comment"></i>
                    <span>Comment</span>
                </div>
                <div class="col-4">
                    <i class="fa-solid fa-share"></i>
                    <span>Share</span>
                </div>
            </div>
        </div>
    </div>

