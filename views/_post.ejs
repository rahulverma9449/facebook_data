<div class="col-12">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col-2" id="post-container-profile">
                    <% if(post.user.avatar){%>
                        <img src="<%=post.user.avatar %>" />
                    <%}else{%>
                        <img src="https://i.pinimg.com/736x/d0/4b/1f/d04b1f2ed3ca8ad4a302fbe9f4f5a875.jpg" />
                    <%}%>
                </div>
                <div class="col-10">
                    <a class="redirect" href="">
                        <h5>
                            <%= post.user.fullName %>
                        </h5>
                    </a>
                    <span class="time">1 October,2023</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <%= post.content %>
        </div>
        <div class="col-12" id="post-container-post">
            <img src="<%= post.postImage %>" />
        </div>
    </div>
